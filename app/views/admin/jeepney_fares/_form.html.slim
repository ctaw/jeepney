= form_for [:admin,@jeepney_fare] do |f|
  .row
    .col-md-12
      .form-group
        label Route
        = f.select "jeepney_route_id", options_from_collection_for_select(@jeepney_routes, "id","sign_board", f.object.jeepney_route_id), {:prompt => 'Select Route'}, { :class => 'form-control input-sm' }
  .row.fare-table.hidden
    .col-md-6
      table.table-condesed.table#jeepneyRoute
        thead
          tr
            th Regular Fare
            th Discounted Fare
        tbody
  .row
    .col-md-6
      .form-group
        label Regular Fare
        = f.text_field :regular_fare, :class => "form-control input-sm"
    .col-md-6
      .form-group
        label Discounted Fare
        = f.text_field :discounted_fare, :class => "form-control input-sm"
  .row
    .col-md-6
      .form-group
        label Distance
        = f.text_field :distance, :class => "form-control input-sm"
  .row  
    .col-md-12
      .btn-group.pull-right
        a.btn.btn-default href="/admin/fares" Back
        = f.submit "Save", :class => "btn btn-success"
